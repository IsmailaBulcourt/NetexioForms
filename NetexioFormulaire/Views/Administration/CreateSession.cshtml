@model Tuple<System.Data.DataTable,NetexioFormulaire.Models.AdministrationData>
@using System.Collections.Generic;
@using System.Data
@{
    ViewData["Title"] = "Créer Une Session";
}
<h1>@ViewData["Title"]</h1>
<p>Page de création de session</p>
<div class=" container">
    <div class="row">
        <label>Selectionnez la formation</label>
    </div>



    @using (Html.BeginForm("Index", "Administration", FormMethod.Post))
    {
        <div class="row">
            

                @{ List<SelectListItem> listItems = new List<SelectListItem>();
                     
                    foreach (DataRow row in Model.Item1.Rows)
                    {
                        foreach (DataColumn col in Model.Item1.Columns)
                        {
                            listItems.Add( new SelectListItem { Text = row[col.ColumnName].ToString(), Value = row[col.ColumnName].ToString() });
                        }
                    }
                

                }
            @Html.DropDownListFor(x=>x.Item2.SelectedFormation, listItems,"Select Formation")

        </div>
        <div class="row">
            <label>Date de Début</label>
            @Html.TextBoxFor(x => x.Item2.BeginDate)
        </div>
        <div class="row">
            <label>Date de Fin</label>
            @Html.TextBoxFor(x => x.Item2.EndDate)
        </div>
        <div class="row">
            <label>Lieu</label>
            @Html.TextBoxFor(x => x.Item2.Location)
        </div>
        <div class="row">
            <label>Formateur</label>
            @Html.TextBoxFor(x => x.Item2.Trainer)
        </div>
        <div class="row">
            <input type="submit" value="Créer" />
        </div>
    }

</div>